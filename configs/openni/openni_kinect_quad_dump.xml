<?xml version="1.0" ?>
<!-- Simple example of lib yuri function.
     The application shows empty temp window
     
     [ temp ]
     
 -->
<app name="temp">
<!-- Specify variables for command line substitution -->
<variable name="width" default="800"/>
<variable name="height" default="600"/>
<variable name="display" default=":0"/>


<variable name="depth" default="1"/>
<variable name="ir" default="0"/>
<variable name="color" default="0"/>
<variable name="sensors" default="1"/>
<variable name="sync" default="1"/>
<variable name="register" default="0"/>

<variable name="level" default="90"/>
<!-- General settings -->
<general>
<!-- Unlimited run time -->
  <parameter name="run_limit">-1</parameter>
<!-- Moderate debug informations -->
  <parameter name="debug">0</parameter>
</general>

<!-- Units -->
<node class="openni_kinect" name="source">
         <parameter name="debug">0</parameter>
        <parameter name="enable_depth">@depth</parameter>
        <parameter name="enable_ir">@ir</parameter>
        <parameter name="enable_color">@color</parameter>
        <parameter name="sensors">@sensors</parameter>
        <parameter name="enable_registration">@register</parameter>
        <parameter name="enable_sync">@sync</parameter>
</node>

<node class="temperature" name="temp0"/>
<node class="temperature" name="temp1"/>
<node class="temperature" name="temp2"/>
<node class="temperature" name="temp3"/>

<node class="dup" name="dup0"/>
<node class="dup" name="dup1"/>
<node class="dup" name="dup2"/>
<node class="dup" name="dup3"/>

<node class="jpegencoder" name=jpeg0>
	<parameter name="level">@level</parameter>
</node>
<node class="jpegencoder" name=jpeg1>
	<parameter name="level">@level</parameter>
</node>
<node class="jpegencoder" name=jpeg2>
	<parameter name="level">@level</parameter>
</node>
<node class="jpegencoder" name=jpeg3>
	<parameter name="level">@level</parameter>
</node>


<node class="filedump" name="dump0">
	<parameter name="filename">stream0_.jpg</parameter>
	<parameter name="sequence">4</parameter>
</node>
<node class="filedump" name="dump1">
	<parameter name="filename">stream1_.jpg</parameter>
	<parameter name="sequence">4</parameter>
</node>
<node class="filedump" name="dump2">
	<parameter name="filename">stream2_.jpg</parameter>
	<parameter name="sequence">4</parameter>
</node>
<node class="filedump" name="dump3">
	<parameter name="filename">stream3_.jpg</parameter>
	<parameter name="sequence">4</parameter>
</node>


<node class="simple_renderer" name="renderer0">
        <parameter name="display">@display</parameter>
        <parameter name="width">@width</parameter>
        <parameter name="height">@height</parameter>
        <parameter name="x">0</parameter>
        <parameter name="y">0</parameter>
        <parameter name="cursor">0</parameter>
        <parameter name="keep_aspect">0</parameter>
</node>
<node class="simple_renderer" name="renderer1">
        <parameter name="display">@display</parameter>
        <parameter name="width">@width</parameter>
        <parameter name="height">@height</parameter>
        <parameter name="x">@width</parameter>
        <parameter name="y">0</parameter>
        <parameter name="cursor">0</parameter>
        <parameter name="keep_aspect">0</parameter>
</node>
<node class="simple_renderer" name="renderer2">
        <parameter name="display">@display</parameter>
        <parameter name="width">@width</parameter>
        <parameter name="height">@height</parameter>
        <parameter name="x">0</parameter>
        <parameter name="y">@height</parameter>
        <parameter name="cursor">0</parameter>
        <parameter name="keep_aspect">0</parameter>
</node>
<node class="simple_renderer" name="renderer3">
        <parameter name="display">@display</parameter>
        <parameter name="width">@width</parameter>
        <parameter name="height">@height</parameter>
        <parameter name="x">@width</parameter>
        <parameter name="y">@height</parameter>
        <parameter name="cursor">0</parameter>
        <parameter name="keep_aspect">0</parameter>
</node>



<!-- Link specifications -->
<link name="kinect0" source="source:0" target="temp0:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="kinect1" source="source:1" target="temp1:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="kinect2" source="source:2" target="temp2:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="kinect3" source="source:3" target="temp3:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp0" source="temp0:0" target="dup0:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp1" source="temp1:0" target="dup1:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp2" source="temp2:0" target="dup2:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp3" source="temp3:0" target="dup3:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp0a" source="dup0:-1" target="renderer0:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp1a" source="dup1:-1" target="renderer1:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp2a" source="dup2:-1" target="renderer2:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp3a" source="dup3:-1" target="renderer3:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>

<link name="temp0b" source="dup0:-1" target="jpeg0:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp1b" source="dup1:-1" target="jpeg1:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp2b" source="dup2:-1" target="jpeg2:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp3b" source="dup3:-1" target="jpeg3:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="jpg0" source="jpeg0:0" target="dump0:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="jpg1" source="jpeg1:0" target="dump1:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="jpg2" source="jpeg2:0" target="dump2:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="jpg3" source="jpeg3:0" target="dump3:0">
        <parameter name="limit">10</parameter>
        <parameter name="limit_type">count</parameter>
</link>

</app>
