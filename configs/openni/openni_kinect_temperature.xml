<?xml version="1.0" ?>
<!-- Simple example of lib yuri function.
     The application shows empty renderer window
     
     [ renderer ]
     
 -->
<app name="renderer">
<!-- Specify variables for command line substitution -->
<variable name="width" default="800"/>
<variable name="height" default="600"/>
<variable name="display" default=":0"/>


<variable name="depth" default="1"/>
<variable name="ir" default="0"/>
<variable name="color" default="0"/>
<variable name="sensors" default="1"/>

<!-- General settings -->
<general>
<!-- Unlimited run time -->
  <parameter name="run_limit">-1</parameter>
<!-- Moderate debug informations -->
  <parameter name="debug">0</parameter>
</general>

<!-- Units -->
<node class="openni_kinect" name="source">
         <parameter name="debug">1</parameter>
        <parameter name="enable_depth">@depth</parameter>
        <parameter name="enable_ir">@ir</parameter>
        <parameter name="enable_color">@color</parameter>
        <parameter name="sensors">@sensors</parameter>
</node>
<node class="temperature" name="temp">
</node>

<!-- And finally simple rendering window -->
<node class="simple_renderer" name="renderer">
        <parameter name="display">@display</parameter>
        <parameter name="width">@width</parameter>
        <parameter name="height">@height</parameter>
        <parameter name="cursor">0</parameter>
        <parameter name="keep_aspect">0</parameter>
</node>

<!-- Link specifications -->
<link name="kinect" source="source:0" target="temp:0">
        <parameter name="limit">1</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="temp" source="temp:0" target="renderer:0">
        <parameter name="limit">1</parameter>
        <parameter name="limit_type">count</parameter>
</link>
</app>
