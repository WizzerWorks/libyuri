<?xml version="1.0" ?>
<!-- Simple example of lib yuri function.
     The application shows empty renderer window
     
     [ renderer ]
     
 -->
<app name="renderer">
<!-- Specify variables for command line substitution -->

<variable name="ip" default=""/>
<variable name="ip_sage" default="192.168.22.211"/>
<variable name="width" default="800"/>
<variable name="height" default="600"/>
    
<!-- General settings -->
<general>
<!-- Unlimited run time -->
  <parameter name="run_limit">-1</parameter>
<!-- Moderate debug informations -->
  <parameter name="debug">0</parameter>
</general>

<!-- Units -->
<node class="vncclient" name="vnc">
        <parameter name="address">@ip</parameter>
        
</node>

<!-- And finally simple rendering window -->
<node class="sage_output" name="renderer">
        <parameter name="address">@ip_sage</parameter>
        <parameter name="width">@width</parameter>
        <parameter name="height">@height</parameter>
</node>
<node class="avscaler" name="scale">
        <parameter name="format">YUV422</parameter>
        <parameter name="width">-1</parameter>
        <parameter name="height">-1</parameter>
</node>
<!-- Link specifications -->

<link name="image" source="vnc:0" target="scale:0">
        <parameter name="limit">1</parameter>
        <parameter name="limit_type">count</parameter>
</link>
<link name="image2" source="scale:0" target="renderer:0">
        <parameter name="limit">1</parameter>
        <parameter name="limit_type">count</parameter>
</link>

</app>
